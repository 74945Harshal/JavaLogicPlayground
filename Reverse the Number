import java.util.Scanner;

public class Reverse 
{

	public static void main(String[] args) 
	{
		int rev=0;
		Scanner i = new Scanner(System.in);
		System.out.println("Enter a number: ");
		int num = i.nextInt();
		while (num>0) 
		{
			int temp = num % 10;
			rev = rev *10 + temp;
			num = num / 10;
				
		}
      System.out.println("Reverse is: "+rev);
	}

}
